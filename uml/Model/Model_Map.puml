package Model.Map {
  class Grid {
    - size: int
    - cells: GridCell[][]
    + Grid(size: int)
    - initializeGrid(): void
    + markIslandZone(startRow: int, startCol: int): void
    + placeBoat(boat: Boat, startCord: Coordinates, orientation: Orientation): boolean
    - isValidPlacement(positions: List<Coordinates>): boolean
    - calculateBoatPositions(boat: Boat, start: Coordinates, orientation: Orientation): List<Coordinates>
    - getCell(cord: Coordinates): GridCell
    + getCellStateInfo(coord: Coordinates): CellStateInfo
    + isCellHit(cord: Coordinates): boolean
    + getSize(): int
