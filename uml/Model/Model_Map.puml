    + isHit(): boolean
    + setHit(hit: boolean): void
    + isBoat(): boolean
    + isBoatSunk(): boolean
    + isDetectableBySonar(): boolean
    + strike(attacker: Player): HitOutcome
  }

  class CellStateInfo <<record>> {
    + isIslandCell(): boolean
    + isHit(): boolean
    + isOccupied(): boolean
    + isBoat(): boolean
    + isBoatSunk(): boolean
    + fromGridCell(cell: GridCell): CellStateInfo
  }
